pipeline{
    agent any 
    stages{
        stage("Git Checkout"){
            steps{
            git branch: 'main', url: 'https://github.com/rajatgithubaccount1234/demo-counter-app.git'
            }
            
        }
        stage("Unit Testing"){
            steps{
            sh 'mvn test' 
            }
            
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
